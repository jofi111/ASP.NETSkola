@model IEnumerable<Student>
@using System.Globalization

    <h3>List of registered students</h3>
    <a class="btn btn-outline-success mb-2" asp-action="Create">Add new student(s)</a>

@foreach(var student in Model)
{
    <div class="border border-1 border-primary p-2 rounded-3 mb-1">
    <h5>@student.FirstName @student.LastName</h5>
    <p>Id:@student.Id</p>
    @* <p>Date of birth: @student.DateOfBirth.ToShortDateString()</p> *@
    <p>Date of birth: @student.DateOfBirth.ToString("d", CultureInfo.CurrentCulture)</p>
    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@student.Id">Update</a>
    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
    </div>
}
