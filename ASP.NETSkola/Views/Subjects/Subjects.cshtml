@model IEnumerable<Subject>

<h3>List of registered subjects</h3>
@if (User.IsInRole("Teacher") || User.IsInRole("Admin")) 
{
    <a class="btn btn-outline-success mb-2" asp-action="CreateSubject">Add new subject</a>
}
@foreach(var subject in Model)
{
    <div class="border border-1 border-primary p-2 rounded-3 mb-1">
        <h5>@subject.Name</h5>
        @if (User.IsInRole("Teacher") || User.IsInRole("Admin")) 
        {
        <p>Id:@subject.Id</p>
        <a class="btn btn-outline-warning" asp-action="EditSubject" asp-route-id="@subject.Id">Update</a>
        <a class="btn btn-outline-danger" asp-action="DeleteSubject" asp-route-id="@subject.Id">Delete</a>
        }
    </div>
}
